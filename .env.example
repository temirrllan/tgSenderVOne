# backend/.env.example

NODE_ENV=development
PORT=3000

# MongoDB
MONGO_URI=mongodb://localhost:27017/sendingBot

# Telegram Bot
BOT_TOKEN=your_bot_token_here
MAIN_BOT_USERNAME=your_bot_username

# JWT
JWT_SECRET=your_secret_key_here
JWT_TTL=30d

# Crypto Wallet
CRYPTO_WALLET=your_wallet_address
ACCESS_PRICE=10
ACCESS_CURRENCY=USDT
BOT_PRICE=10
BOT_CURRENCY=USDT

# Mini App URL (для production на Vercel)
MINIAPP_URL=https://your-app.vercel.app

# Telegram Init Data Max Age (seconds)
TG_INITDATA_MAX_AGE=60